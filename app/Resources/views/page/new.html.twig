{% extends 'baseadmin.html.twig' %}

{% block body %}
    <h1>Page creation</h1>


    {{ form_start(form) }}
        {{ form_widget(form) }}
		<div id="dropZone" class="clearfix">
			<div id="text">Для загрузки, перетащите файлы сюда.</div>
			<div class="sortable"></div>
		</div>
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('page_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}

<script src="{{ asset('admin/js/imageUpload.js') }}"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>
	$(document).ready(function() {
		$('.sortable').sortable().bind('sortupdate', function(e, ui) {
			$('.sortable input.sort').each(function(i){
				$(this).val(i);
			});
		});
		
	});
</script>	

{% endblock %}


