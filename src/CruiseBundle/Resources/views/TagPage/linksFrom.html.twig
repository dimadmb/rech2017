<style>
.half-hidden.on {
	height:400px;
	overflow:hidden;
}

</style>

<div class="row half-hidden on" >
	<div class="col-sm-6">
		<ul>
			{% for placeCode , place in placesAssoc %}
				<li><a href="{{path('cruise_from_to',{'place_from':from,'place_to':placeCode})}}">Круизы из {{placesAssoc[from].gen}} в {{place.acc}}</a></li>
			{% endfor %}
		</ul> 
		<ul>
			{% for riverCode , river in riverAssoc %}
				<li><a href="{{path('cruise_from_river',{'place_from':from,'river':riverCode})}}">Круизы из {{placesAssoc[from].gen}} по {{river}}</a></li>
			{% endfor %}
		</ul> 	
		<ul>
			{% for monthCode, month in monthAssoc %}
				<li><a href="{{path('cruise_from_month',{'place_from':from,'month':monthCode})}}">Круизы из {{placesAssoc[from].gen}} в {{month}}</a></li>
			{% endfor %}
		</ul> 
	</div>
	<div class="col-sm-6">
		<ul>
			{%for ship in ships %}
				<li><a href="{{path('cruise_from_on_ship',{'place_from':from,'shipCode':ship.code})}}">Круизы из {{placesAssoc[from].gen}} на теплоходе {{ship.name}}</a></li>
			{% endfor %}
		</ul>
	</div>
	
	
</div>

<button class="btn btn-default half-toggle">Развернуть/скрыть</button>

<JS>
	$('.half-toggle').click(function(){
		$('.half-hidden').toggleClass('on');
	})
</JS>
